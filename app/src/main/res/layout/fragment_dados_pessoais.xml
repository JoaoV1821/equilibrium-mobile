<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".feature_paciente.HomePaciente">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etapa 1 de 3"
        android:textColor="#2260FF"
        android:textSize="@dimen/font_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:text="Dados Pessoais"
        android:textColor="#2260FF"
        android:textSize="@dimen/font_display"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable container: mantém o conteúdo rolável quando teclado aparece -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_32"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_16">

            <!-- Nome -->
            <EditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_12"
                android:background="@drawable/edittext_background"
                android:hint="Nome completo *"
                android:padding="@dimen/space_12"
                android:textSize="@dimen/font_body"
                android:imeOptions="actionNext"
                android:maxLines="1"
                />

            <!-- CPF -->
            <EditText
                android:id="@+id/cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_12"
                android:background="@drawable/edittext_background"
                android:hint="CPF *"
                android:inputType="number"
                android:padding="@dimen/space_12"
                android:textSize="@dimen/font_body"
                android:imeOptions="actionNext"
                android:maxLines="1"
                />

            <!-- Telefone -->
            <EditText
                android:id="@+id/telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_12"
                android:background="@drawable/edittext_background"
                android:hint="Telefone"
                android:inputType="phone"
                android:padding="@dimen/space_12"
                android:textSize="@dimen/font_body"
                android:imeOptions="actionNext"
                android:maxLines="1"
                />

            <!-- Sexo (card-like) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="@dimen/space_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_8"
                    android:text="Sexo *"
                    android:textSize="@dimen/font_body"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroupSexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioMasculino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masculino" />

                    <RadioButton
                        android:id="@+id/radioFeminino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Feminino" />
                </RadioGroup>
            </LinearLayout>

            <!-- Data de nascimento -->
            <EditText
                android:id="@+id/dataNascimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_20"
                android:background="@drawable/edittext_background"
                android:hint="Data de Nascimento * (dd/mm/aaaa)"
                android:inputType="number"
                android:padding="@dimen/space_12"
                android:textSize="@dimen/font_body"
                android:imeOptions="actionDone" />

            <!-- Botões: usam weights para preencher igualmente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_8"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voltar"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_8"
                    android:layout_weight="1"
                    android:padding="@dimen/space_12"
                    android:text="Voltar"
                    android:textColor="#2260FF"
                    android:textSize="@dimen/font_body"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="12dp"
                    app:strokeColor="#2260FF"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/enviar"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/space_12"
                    android:text="Próximo"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_body"
                    app:backgroundTint="#2260FF"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- bottom padding para garantir espaço quando teclado aberto -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_16" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
